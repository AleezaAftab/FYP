
@{
    ViewData["Title"] = "Address";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="container-fluid">

        @if (ViewBag.address == null)
        {

            <form asp-action="add" method="post" enctype="multipart/form-data">
                <div class="row" style="display:inline">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" name="addr" required class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" required class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Number</label>
                            <input type="text" name="phone" required class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style=" padding: 10px;text-align: center;">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        }

        @if (ViewBag.address != null)
        {

            <form asp-action="update" method="post" enctype="multipart/form-data">
                <div class="row" style="display:inline">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" name="addr"  value="@ViewBag.address.addr" required class="form-control" />
                            <input type="hidden" name="id"  value="@ViewBag.address.id" required class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" value="@ViewBag.address.email" required class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="phone" required value="@ViewBag.address.phone" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style=" padding: 10px;
        text-align: center;
">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        }

    </div>

