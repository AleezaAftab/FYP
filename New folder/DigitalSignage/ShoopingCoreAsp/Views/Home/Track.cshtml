
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Breadcrumb Area -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-box text-center">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="/">Home</a></li>
                        <li class="list-inline-item"><span>||</span> Cart List</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Breadcrumb Area -->
<!-- Wishlist -->
<section class="shopping-cart">
    <div class="container">
        <form asp-action="searchOrder" method="POST">

            <div class="row">

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Order Number</label>
                        <input type="text" name="id" class="form-control" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
            <br /><br />


        </form>

        <div class="row">

            @if (ViewBag.order != null)
            {
                <h4> Order Products</h4>
                <div class="col-md-12">
                    <b>Order id:</b> &nbsp;&nbsp; @ViewBag.order.id <br />
                    <b>Username:</b>  &nbsp;&nbsp;@ViewBag.order.username <br />
                    <b>Email:</b>  &nbsp;&nbsp;@ViewBag.order.email <br />
                    <b>Phone Number:</b> &nbsp;&nbsp; @ViewBag.order.phone_number <br />
                    <b>City:</b>  &nbsp;&nbsp;@ViewBag.order.city <br />
                    <b>Address:</b> &nbsp;&nbsp; @ViewBag.order.address <br />
                    <b>Status:</b> &nbsp;&nbsp; @ViewBag.order.status <br />
                    <b>Order Date:</b> &nbsp;&nbsp; @Convert.ToDateTime(ViewBag.order.order_date).ToString("dd-MMM-yyyy") <br />

                    <hr />
                </div>
                <h4> Order Products</h4>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.prods)
                        {
                            <tr>
                                <td>@item.name</td>
                                <td>@item.product_price</td>
                                <td>@item.quantity</td>
                                <td>
                                    <img src="/@item.image" height="70" />
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                        </tr>
                    </tfoot>
                </table>


            }

        </div>
        <br /><br />
        <br /><br /><br />
    </div>
    <b></b>
    <b></b>
    <b></b>
    <br />
</section>
