
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row" style="    text-align: right;
    display: block;">
        <a href="/Category/allCategories" class="btn btn-info"> Category List </a>
    </div>

    <h4>Update Category </h4>
    <form  asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label>Category Name</label>
                    <input type="text" name="name" value="@ViewBag.category.name" required class="form-control" />
                    <input type="hidden" name="id" value="@ViewBag.category.id" required class="form-control" />
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <label>Select Product Image</label>
                    <input class="form-control" type="file" required name="file" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label>Old Image</label>
                   <img src="/@ViewBag.category.image"  height="200"/>
                </div>
            </div>
        </div>
        <div class="col-md-12" style=" padding: 10px;
        text-align: center;
">
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>

</div>

