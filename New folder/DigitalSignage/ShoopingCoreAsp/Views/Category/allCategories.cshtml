
@{
    ViewData["Title"] = "allCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listData)
            {
            <tr>
                <td>@item.name</td>
                <td><img src="/@item.image" style="height:50px;" /></td>
                <td>
                    <a href="/Category/FindCategory/@item.id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Category/deleteCategory/@item.id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>
