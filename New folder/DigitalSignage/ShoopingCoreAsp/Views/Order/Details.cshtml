
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container-fluid">

    <h4>Order Information</h4>
    <div class="col-md-12">
        <b>Order ID:</b> @ViewBag.order.id <br />
        <b>Username:</b> @ViewBag.order.username <br />
        <b>Email:</b> @ViewBag.order.email <br />
        <b>Phone Number:</b> @ViewBag.order.phone_number <br />
        <b>City:</b> @ViewBag.order.city <br />
        <b>Address:</b> @ViewBag.order.address <br />
        <b>Status:</b> @ViewBag.order.status <br />
        <b>Order Date:</b> @Convert.ToDateTime(ViewBag.order.order_date).ToString("dd-MMM-yyyy") <br />
        <hr />
    </div>


    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.orders)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.product_price</td>
                    <td>@item.quantity</td>
                    <td>
                        <img src="/@item.image" height="70" />
                    </td>
                  
                   
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
            </tr>
        </tfoot>
    </table>
</div>
