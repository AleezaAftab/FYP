
@{
    ViewData["Title"] = "Index";
}

@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container-fluid">
        <h1>Alert Products</h1>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>QR Code</th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.products)
                {
                    <tr>
                        <td>@item.product_name</td>
                        <td>@item.brand_name</td>
                        <td>@item.product_price</td>
                        <td>@item.product_quantity</td>
                        <td>@item.product_qrcode</td>
                        <td>@item.cat_name</td>
                        <td>@item.sub_cat_name</td>
                        <td><img src="/@item.product_image" height="100" width="100" /></td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>QR Code</th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    
                    <th>Image</th>
                </tr>
            </tfoot>
        </table>
    </div>

