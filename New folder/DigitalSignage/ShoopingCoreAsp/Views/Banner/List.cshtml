
@{
    ViewData["Title"] = "All Banners";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="container-fluid">
        <div class="row" style="    text-align: right;
    display: block;">
            <a href="/Banner" class="btn btn-info">Add Banner</a>
        </div>
        <br /><br />
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.banners)
                {
                    <tr>
                        <td><img src="/@item.image" style="height:100px;width:300px;" /></td>
                        <td>
                            <a href="/banner/deleteBanner/@item.id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
